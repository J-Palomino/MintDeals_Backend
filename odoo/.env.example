# Odoo Environment Variables
# Copy this to .env and fill in the values

# Database Connection (Railway provides these via PostgreSQL service)
PGHOST=localhost
PGPORT=5432
PGUSER=odoo
PGPASSWORD=your_password_here
PGDATABASE=odoo

# Odoo Admin Password (for database management)
ODOO_ADMIN_PASSWORD=your_secure_admin_password

# Server Port (Railway sets this automatically)
PORT=8069

# Worker Configuration
ODOO_WORKERS=2

# Debug Options (set to True for development)
ODOO_LIST_DB=False
