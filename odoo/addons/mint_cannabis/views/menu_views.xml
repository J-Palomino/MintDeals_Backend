              name="Cannabis"
              sequence="5"/>

    <!-- Cannabis Configuration Menu -->
    <menuitem id="menu_cannabis_config"
              name="Configuration"
              parent="menu_cannabis_root"
              sequence="100"/>

    <!-- Strains Menu -->
    <menuitem id="menu_cannabis_strains"
              name="Strains"
              parent="menu_cannabis_config"
              action="cannabis_strain_action"
              sequence="10"/>

    <!-- Brands Menu -->
    <menuitem id="menu_cannabis_brands"
              name="Brands"
              parent="menu_cannabis_config"
              action="cannabis_brand_action"
              sequence="20"/>

    <!-- Cannabis Products Menu (under Inventory) - removed, use Cannabis root menu instead -->

    <!-- Quick Links under Cannabis root -->
