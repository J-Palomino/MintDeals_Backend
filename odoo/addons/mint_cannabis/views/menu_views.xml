              name="Products"
              parent="menu_cannabis_root"
              action="product.product_template_action"
              sequence="10"/>

    <menuitem id="menu_cannabis_strains_direct"
              name="Strains"
              parent="menu_cannabis_root"
              action="cannabis_strain_action"
              sequence="20"/>

    <menuitem id="menu_cannabis_brands_direct"
              name="Brands"
              parent="menu_cannabis_root"
              action="cannabis_brand_action"
              sequence="30"/>

    <!-- Reporting Menu -->
    <menuitem id="menu_cannabis_reports"
              name="Reports"
              parent="menu_cannabis_root"
              sequence="90"/>

</odoo>
