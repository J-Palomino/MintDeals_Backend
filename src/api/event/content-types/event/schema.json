{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Store events, vendor days, and special occasions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "maxLength": 200,
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "short_description": {
      "type": "string",
      "maxLength": 200
    },
    "event_date": {
      "type": "date",
      "required": true
    },
    "start_time": {
      "type": "time",
      "required": true
    },
    "end_time": {
      "type": "time"
    },
    "location_details": {
      "type": "string",
      "maxLength": 255
    },
    "event_type": {
      "type": "enumeration",
      "enum": [
        "vendor_day",
        "special_sale",
        "workshop",
        "community",
        "holiday",
        "other"
      ],
      "default": "other",
      "required": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "store": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store.store",
      "inversedBy": "events"
    },
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "events"
    },
    "seo": {
      "type": "component",
      "component": "seo.meta",
      "repeatable": false
    }
  }
}
